    QuestionID INTEGER PRIMARY KEY,
    CategoryID INTEGER,
    QuestionText TEXT NOT NULL,
    AnswerText TEXT NOT NULL,
    FOREIGN KEY (CategoryID) REFERENCES Categories(CategoryID)
);

